@{
    Layout = "_formpages";
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://drive.google.com/uc?export=view&id=1yTLwNiCZhIdCWolQldwq4spHQkgZDqkG">

    <style>
        .para {
            font-size: 250%;
            text-align: center;
        }

        #opt1 {
            font-weight: bold;
            border-width: 3px;
            border-color: #4367d3;
            background-color: #e8eaf1;
            color: #4367d3;
        }

            #opt1:hover {
                font-weight: bold;
                border-width: 3px;
                background-color: #4367d3;
                color: white;
            }

        #opt2 {
            font-weight: bold;
            border-width: 3px;
            border-color: #00adef;
            background-color: #e5f3f8;
            color: #00adef;
        }

            #opt2:hover {
                font-weight: bold;
                border-width: 3px;
                background-color: #00adef;
                color: white;
            }

        #opt3 {
            font-weight: bold;
            border-width: 3px;
            border-color: #228b22;
            background-color: #e8f0e8;
            color: #228b22;
        }

            #opt3:hover {
                font-weight: bold;
                border-width: 3px;
                background-color: #228b22;
                color: white;
            }

        #opt4 {
            font-weight: bold;
            border-width: 3px;
            border-color: #d90f81;
            background-color: #f6e6ef;
            color: #d90f81;
        }

            #opt4:hover {
                font-weight: bold;
                border-width: 3px;
                background-color: #d90f81;
                color: white;
            }

        .foot {
            position: absolute;
            bottom: 15px;
        }

        .anchor [data-bs-theme = 'light'] {
            color: black;
            text-decoration: none;
        }

        .anchor [data-bs-theme ='dark'] {
            color: white;
            text-decoration: none;
        }


        span {
            font-size: 25px;
        }

        #back-btn:hover {
            color: white;
        }

        footer a {
            color: black;
            text-decoration: none;
        }

            footer a:hover {
                color: black;
                text-decoration: none;
            }

    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body class="">

    <div class="row justify-content-end">
        <div class="col-2 mt-4">
            <button class="btn btn-outline-info backbtn" onclick="window.history.back(-1)" >
                <div>
                    <img src="/SRS Screen Shorts/go-back-2.svg" alt="" width="25px">Back
                </div>
            </button>
        </div>
    </div>

    <p class="para">I am a...</p>
    <div class=" row  justify-content-center ">
        <div class="col-md-5 col-lg-3 col-10">
            <div class="row border m-3 rounded" id="option1-div">
                <a asp-controller="Home" asp-action="create_patient_request" class="btn w-100" id="opt1" type="button">
                    <span id="options">Patient</span>
                </a>
            </div>
            <div class="row border m-3 rounded" id="option2-div">
                <a asp-controller="Home" asp-action="Friend_family" class="btn w-100 " id="opt2" type="button">
                    <span>Family / Friends</span>
                </a>
            </div>
            <div class="row border m-3 rounded " id="option3-div">
                <a asp-controller="Home" asp-action="Concierge_info" class="btn w-100" id="opt3" type="button">
                    <span>Concierge</span>
                </a>
            </div>
            <div class="row border m-3 rounded" id="option4-div">
                <a asp-controller="Home" asp-action="Business_Info" class="btn w-100" id="opt4" type="button">
                    <span id="options">Business Partners</span>
                </a>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous">

        </script>
</body>

</html>